{
    "scripts": {
        "build": "docker build -t ghcr.io/liveinstantly/wowza-streaming-engine-ubuntu:4.8.21_6-`date +%Y%m%d` .",
        "tag-latest": "docker tag ghcr.io/liveinstantly/wowza-streaming-engine-ubuntu:4.8.21_6-`date +%Y%m%d` ghcr.io/liveinstantly/wowza-streaming-engine-ubuntu:latest",
        "push": "docker push ghcr.io/liveinstantly/wowza-streaming-engine-ubuntu:4.8.21_6-`date +%Y%m%d`",
        "push-latest": "docker push ghcr.io/liveinstantly/wowza-streaming-engine-ubuntu:latest",
        "release": "yarn run build && yarn run tag && yarn run push",

        "start": "docker-compose up -d",
        "stop": "docker-compose down",

        "test:build": "docker build -t local/wowza-streaming-engine-ubuntu .",
        "test:start": "docker-compose -f docker-compose-test.yml up -d",
        "test:stop": "docker-compose -f docker-compose-test.yml down",
        "test:rm": "docker image rm local/wowza-streaming-engine-ubuntu"
    }
}